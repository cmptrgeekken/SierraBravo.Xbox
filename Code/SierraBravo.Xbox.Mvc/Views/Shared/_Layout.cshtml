<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>VGMS | @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>

<body>
<div id="wrapper">
    <div id="header"><h1>Video Game Management System</h1></div>
    <div id="navigation">
        <ul>
            <li><a href="@Url.Content("~/")">View Games</a></li>
        @if( !ViewBag.ReadOnly ){
            <li><a href="@Url.Content("~/Add")">Add Game</a></li>
        }
            <li><a href="@Url.Content("~/Clear")">Clear Database</a></li>
            <li><a href="@Url.Content("~/Faq")">FAQ</a></li>
            <li>
                <span>
                 
            @if( ViewBag.NoActionReason == null ){
                @Html.Raw(String.Format("<b>{0}</b> action{1} left for today",ViewBag.NumberOfActionsLeft,ViewBag.NumberOfActionsLeft!=1?"s":""))
            }else
            {
                @ViewBag.NoActionReason
            }
                </span>
            </li>
        </ul>
        <div style="clear:left"></div>
    </div>
    <div id="main">
    @if(TempData["Success"] != null){
        <div class="message-success">@Html.Raw(TempData["Success"] as string)</div>
    }

    @if(TempData["Error"] != null){
        <div class="message-error">@Html.Raw(TempData["Error"] as string)</div>
    }
    @RenderBody()
        <div style="clear:left"></div>
    </div>
    <div id="footer">
        Copyright &copy; Kenneth Beck, @DateTime.Now.Year
    </div>
</div>
</body>
</html>